{% extends 'base.html.twig' %}

{% block title %}Alumno index{% endblock %}

{% block body %}
    <main class='main-content bgc-grey-100'>
        <div id='mainContent'>
            <div class="container-fluid">
                <h4 class="c-grey-900 mT-10 mB-30">Tus Amigos</h4>
                <div class="row">
                    <div class="col-md-12">
                        <div class="bgc-white bd bdrs-3 p-20 mB-20">							
                            <table id="dataTable" class="table table-striped table-hover" cellspacing="0" width="80%">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Apellido</th>
                                        <th>Email</th>
                                        <th>actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for amigo in amigos %}
                                        <tr>
                                            <td>{{ amigo.nombre }}</td>
                                            <td>{{ amigo.apellidos }}</td>
                                            <td>{{ amigo.email }}</td>
                                            <td>
                                                <a href="{{ path('alumnos_delete', {'id': amigo.id}) }}"> Borrar</a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="7">¡Aún no tienes amigos!</td>
                                        </tr>
                                    {% endfor %}                                                   
                                </tbody>
                            </table><br/>
                            <a href="{{ path('alumnos_new') }}">Agregar amigo</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </main>

{% endblock %}
