{% extends 'layout.html.twig' %}

{% block container %}<div></div>{% endblock %}
{% block limiter %}
    <div class="container">
        <div class="signup-form-container">
            {{form_start(form, {'action':'', 'method':'POST', 'role':'form', 'id':'register-form', 'autocomplete':'off'})}}			
            <div class="form-header">
                <h3 class="form-title"><i class="fa fa-user"></i> Regístrate</h3>

                <div class="pull-right">
                </div>
            </div>
            <div class="form-body">

                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                            {{ form_widget(form.nombre, {'attr': {'class': 'form-control', 'placeholder': 'nombre'} })}}
                    </div>
                    <span class="help-block" id="error"></span>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                            {{ form_widget(form.apellidos, {'attr': {'class': 'form-control', 'placeholder': 'apellidos'} })}}
                    </div>
                    <span class="help-block" id="error"></span>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></div>
                            {{ form_widget(form.email, {'attr': {'name': 'email', 'class': 'form-control', 'placeholder': 'email'} })}}
                    </div> 
					{% if error != null %}
						<span class="help-block" id="error">{{error}}</span>
					{% endif %}                                        
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></div>
                            {{ form_widget(form.password, {'attr': {'name': 'password','id':'inputPassword', 'class': 'form-control', 'placeholder': 'password: mínimo 6 carácteres'} })}}
                    </div> 
                    <span class="help-block" id="error"></span>                     
                </div>

            </div>
            <div class="form-footer">
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-info'} })}}
            </div>
            {{form_end(form)}}
        </div>
    </div>
    <br/>
{% endblock %}


